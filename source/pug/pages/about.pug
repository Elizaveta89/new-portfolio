                                .skills__block
                                    .skills__title Frontend
                                    ul.skills__list
                                        li.skills__item
                                            .skills__circle
                                                img.skills__circle-pic(src="./assets/img/icons/circle.png")
                                                span.skills__circle-text HTML
                                        li.skills__item
                                            .skills__circle
                                                img.skills__circle-pic(src="./assets/img/icons/circle.png")
                                                span.skills__circle-text CSS3
                                        li.skills__item
                                            .skills__circle
                                                img.skills__circle-pic(src="./assets/img/icons/circle.png")
                                                span.skills__circle-text.skills__circle-js JavaScript&Jquery
                                    .skills__block
                                    .skills__title Backend
                                    ul.skills__list
                                        li.skills__item
                                            .skills__circle
                                                img.skills__circle-pic(src="./assets/img/icons/circle.png")
                                                span.skills__circle-text PHP
                                        li.skills__item
                                            .skills__circle
                                                img.skills__circle-pic(src="./assets/img/icons/circle.png")
                                                span.skills__circle-text mySQL
                                        li.skills__item
                                            .skills__circle
                                                img.skills__circle-pic(src="./assets/img/icons/circle.png")
                                                span.skills__circle-text Node.js & npm
                                        li.skills__item
                                            .skills__circle
                                                img.skills__circle-pic(src="./assets/img/icons/circle.png")
